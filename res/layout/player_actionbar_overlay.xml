<!-- ActionBar自定义View -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_controller"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_transparent_background"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_action_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icn_actionbar_back" />

    <TextView
        android:id="@+id/iv_action_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_weight="1"
        android:singleLine="true"
        android:textColor="#d6d8d8"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/ll_convergence"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_convergence"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/convergence_none"
            android:textColor="#d6d8d8"
            android:textSize="15dp"
            android:padding="10dp"
            android:gravity="center" />

        <!-- <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/division" /> -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_format"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_format"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/type_2d"
            android:textColor="#d6d8d8"
            android:padding="10dp"
            android:textSize="15dp" 
            android:gravity="center"/>

        <!-- <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/division" /> -->
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_action_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icn_actionbar_option" />

</LinearLayout>